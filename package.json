{
  "name": "roper-good-neighbor-fund",
  "version": "1.0.0",
  "description": "Helping Roper students in emergency situations",
  "main": "index.js",
  "scripts": {
    "css:lint": "stylelint --fix src/scss/*.scss --syntax scss || true",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*"
  },
  "repository": {
    "type": "git",
    "url": "roperneighbors.github.io"
  },
  "keywords": [
    "none"
  ],
  "author": "Anita Epp",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.13.12",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-jquery": "^3.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jquery": "^1.5.1",
    "htmlnano": "^0.2.8",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^8.3.1",
    "posthtml": "^0.15.1",
    "posthtml-cli": "^0.9.1",
    "posthtml-modules": "^0.7.4",
    "stylelint": "^13.12.0",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "acorn": "^8.1.0",
    "bufferutil": "^4.0.3",
    "normalize.css": "^8.0.1",
    "postcss": "^8.2.9",
    "utf-8-validate": "^5.0.4"
  },
  "eslintIgnore": ["webpack.config.js"]
}
